<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Bootstrap và jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <!-- Custom JavaScript -->
    <!-- LineIcons -->
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Admin.css"> 
</head>
<body>
    <div class="wrapper">
        <!-- Thanh chuc nang -->
        <div id="sidebar" class="expand">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <a asp-controller="Home" asp-action="Index">4TL FOOD</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="QuanLyDonHang" asp-action="Index" class="sidebar-link">
                        <i class="lni lni-dinner"></i>
                        <span>Quản lý đơn hàng</span>
                    </a>
                </li>
                <!-- Sidebar Links with ASP.NET Attributes -->
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="QuanLyKhachHang" asp-action="Index" class="sidebar-link">
                        <i class="lni lni-user"></i>
                        <span>Quản lý khách hàng</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="ThongKe" asp-action="Index">
                        <i class="lni lni-stats-up"></i>
                        <span>Thống kê doanh thu</span>
                    </a>
                </li>


                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="AdminChat" asp-action="Index">
                        <i class="lni lni-comments"></i>
                        <span>Quản lý tin nhắn</span>
                    </a>
                </li>

                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="PhanHoiDanhGia" asp-action="Index">
                        <i class="lni lni-comments"></i>
                        <span>Phản hồi đánh giá</span>
                    </a>
                </li>

                <!-- More Sidebar Links -->
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="MonAn" asp-action="Index">
                        <i class="lni lni-dinner"></i>
                        <span>Quản lý món ăn</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="DanhMuc" asp-action="Index">
                        <i class="lni lni-list"></i>
                        <span>Quản lý danh mục</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="TaiKhoan" asp-action="Index">
                        <i class="lni lni-users"></i>
                        <span>Quản lý tài khoản</span>
                    </a>
                </li>
            </ul>
        </div>
        @RenderBody()
    </div>


    <!-- javascipt boostrap -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!--js thong báo -->
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <script src="~/js/QuanLyDonHang.js"></script>
    <script src="~/js/QuanLyKhachHang.js"></script>
    <script src="~/js/ThongKe.js"></script>
    <script src="~/js/PhanHoiDanhGia.js"></script>

    @RenderSection("Scripts", required: false)


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>