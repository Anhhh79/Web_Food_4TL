    <!-- Modal thêm nhân viên -->
    <div class="modal fade" id="them" tabindex="-1" aria-labelledby="them" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="border-radius: 20px;">
                <div class="modal-header d-flex justify-content-center">
                    <div>
                        <h5 style="font-weight: bolder;">Thêm nhân viên</h5>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <label for="fullname" class="ms-1 mb-1 label-modal">Họ và Tên</label>
                                <input type="text" class="form-control" id="fullname" placeholder="" required>
                                <span id="fullnameError" class="error text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label class="mb-1 ms-1 label-modal">Giới tính</label>
                                <select class="form-select" id="gender" required>
                                    <option value="">Chọn giới tính</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Khác">Khác</option>
                                </select>
                                <span class="error text-danger" id="genderError"></span>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6">
                                <label for="cccd" class="ms-1 mb-1 label-modal">
                                    Căn cước công
                                    dân
                                </label>
                                <input type="number" inputmode="numeric" class="form-control" id="cccd"
                                       placeholder="" required>
                                <span id="cccdError" class="error text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label for="phone" class="ms-1 mb-1 label-modal">Số điện thoại</label>
                                <input type="number" class="form-control" id="phone" placeholder="" required>
                                <span id="phoneError" class="error text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6">
                                <label class="mb-1 ms-1 label-modal">Chức vụ</label>
                                <select class="form-select" id="position" required>
                                    <option value="">Chọn chức vụ</option>
                                    <option value="Quản lý">Quản lý</option>
                                    <option value="Bảo vệ">Bảo vệ</option>
                                    <option value="Lễ tân">Lễ tân</option>
                                </select>
                                <span class="error text-danger" id="positionError"></span>
                            </div>
                            <div class="col-6">
                                <label for="address" class="ms-1 mb-1 label-modal">Địa chỉ</label>
                                <input type="text" class="form-control" id="address" placeholder="" required>
                                <span id="addressError" class="error text-danger"></span>
                            </div>

                            <div class="row mt-1">
                                <div class="col-6">
                                    <label class="mb-1 ms-1 label-modal">Ảnh </label>
                                    <input type="file" id="AddimageInput" accept="image/*">
                                    <span class="error text-danger" id="imageError"></span>
                                </div>
                            </div>
                        </div>
                    </div>
