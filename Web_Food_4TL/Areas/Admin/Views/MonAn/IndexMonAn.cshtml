@using Newtonsoft.Json
@using System.Globalization
@model IEnumerable<Web_Food_4TL.Models.MonAn>

@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Danh sách món ăn";

    // Cài đặt serializer để bỏ qua vòng lặp tự tham chiếu
    var serializerSettings = new JsonSerializerSettings
            {
                ReferenceLoopHandling = ReferenceLoopHandling.Ignore
            };
}

<!-- Toastr CSS/JS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<div class="main" id="content">
    <!-- ... phần header, navbar giữ nguyên ... -->
    <nav class="navbar navbar-expand px-4 py-3">
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav justify-content-between" style="width: 1380px;">
                <li><h2 style="font-weight: bolder;">Quản lý món ăn</h2></li>
                <li class="ms-3 dropdown">
                    <button class="btn btn-secondary text-light dropdown-toggle d-none d-lg-block" id="userDropdown" data-bs-toggle="dropdown"> <i class="fa fa-user-circle"></i> @Context.Session.GetString("UserName")</button>
                    <ul class="dropdown-menu"><li><a class="dropdown-item text-danger" href="/Customer/Account/Logout">Đăng xuất</a></li></ul>
                </li>
            </ul>
        </div>
    </nav>

    <div class="ms-5" style="width:1180px">
        <button class="btn btn-primary btn-sm mb-2" id="btnAddMonAn"><i class="fas fa-plus"></i> Thêm Món Ăn</button>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr><th>Tên Món Ăn</th><th>Giá</th><th>Mô Tả</th><th>Danh Mục</th><th>Ảnh</th><th>Hành Động</th></tr>
            </thead>
            <tbody>
                @foreach (var monAn in Model)
                {
                    var imagesJson = monAn.AnhMonAnh != null
                    ? JsonConvert.SerializeObject(monAn.AnhMonAnh.Select(a => new { id = a.Id, url = a.Url }), serializerSettings)
                    : "[]";
                    <tr>
                        <td>@monAn.TenMonAn</td>
                        <td>@monAn.Gia.ToString("G29")</td>
                        <td>@monAn.MoTa</td>
                        <td>@monAn.DanhMuc?.TenDanhMuc</td>
                        <td>
                            @if (monAn.AnhMonAnh?.Any() == true)
                            {
                                foreach (var anh in monAn.AnhMonAnh.Take(4))
                                {
                                    <img src="/uploads/monan/@anh.Url" width="50" height="50" style="object-fit: cover; margin-right:4px;" />
                                }
                            }
                        </td>
                        <td>
                            <button class="btn btn-warning btnEditMonAn"
                                    data-id="@monAn.Id" data-ten="@monAn.TenMonAn" data-gia="@monAn.Gia.ToString("G29", CultureInfo.InvariantCulture)"
                                    data-mota="@monAn.MoTa" data-danhmucid="@monAn.DanhMucId" data-images='@Html.Raw(imagesJson)'>
                                <i class="fas fa-edit"></i> Sửa
                            </button>
                            <button class="btn btn-danger btnDeleteMonAn" data-id="@monAn.Id"><i class="fas fa-trash"></i> Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Phân trang giữ nguyên -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage-1 })">&lt;</a></li>
            }
            <li class="page-item disabled"><span class="page-link">@ViewBag.CurrentPage / @ViewBag.TotalPages</span></li>
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage+1 })">&gt;</a></li>
            }
        </ul>
    </nav>
</div>

<!-- Modal Thêm Món Ăn giữ nguyên -->
<div class="modal fade" id="modalAddMonAn" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Thêm Món Ăn</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <form id="formAddMonAn" enctype="multipart/form-data">
                    <div class="mb-3"><label class="form-label">Tên Món Ăn</label><input type="text" class="form-control" name="TenMonAn" required /></div>
                    <div class="mb-3"><label class="form-label">Giá</label><input type="number" class="form-control" name="Gia" required /></div>
                    <div class="mb-3"><label class="form-label">Mô Tả</label><textarea class="form-control" name="MoTa"></textarea></div>
                    <div class="mb-3"><label class="form-label">Danh Mục</label><select class="form-control" name="DanhMucId" id="addDanhMucId" required><option value="">-- Chọn danh mục --</option>@foreach (var dm in ViewBag.DanhMucList)
                            {
                                <option value="@dm.Id">@dm.TenDanhMuc</option>
                            }</select></div>
                    <div class="mb-3"><label class="form-label">Ảnh (có thể chọn nhiều)</label><input type="file" class="form-control" name="files" multiple /></div>
                    <button type="submit" class="btn btn-success">Lưu</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa Món Ăn giữ nguyên -->
<div class="modal fade" id="modalEditMonAn" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Chỉnh Sửa Món Ăn</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <form id="formEditMonAn" enctype="multipart/form-data">
                    <input type="hidden" name="Id" id="editMonAnId" />
                    <div class="mb-3"><label class="form-label">Tên Món Ăn</label><input type="text" class="form-control" name="TenMonAn" id="editTenMonAn" required /></div>
                    <div class="mb-3"><label class="form-label">Giá</label><input type="number" class="form-control" name="Gia" id="editGia" required /></div>
                    <div class="mb-3"><label class="form-label">Mô Tả</label><textarea class="form-control" name="MoTa" id="editMoTa"></textarea></div>
                    <div class="mb-3"><label class="form-label">Danh Mục</label><select class="form-control" name="DanhMucId" id="editDanhMuc" required><option value="">-- Chọn danh mục --</option>@foreach (var dm in ViewBag.DanhMucList)
                            {
                                <option value="@dm.Id">@dm.TenDanhMuc</option>
                            }</select></div>
                    <div class="mb-3"><label class="form-label">Ảnh hiện tại</label><div id="editAnhHienTai" class="d-flex flex-wrap"></div></div>
                    <div class="mb-3"><label class="form-label">Ảnh (có thể chọn nhiều)</label><input type="file" class="form-control" name="files" id="editFiles" multiple /></div>
                    <button type="submit" class="btn btn-success">Lưu</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Script giữ nguyên nhưng thay alert Thêm/Sửa thành toastr -->
<script>
    $(document).ready(function() {
        toastr.options = { closeButton: true, progressBar: true, positionClass: 'toast-top-right', timeOut: 3000 };

        // khởi tạo dropdown
        var danhMucHtml = '<option value="">-- Chọn danh mục --</option>';
    @foreach (var dm in ViewBag.DanhMucList)
    {
        @:danhMucHtml += '<option value="@dm.Id">@dm.TenDanhMuc</option>';
    }
        $('#addDanhMucId, #editDanhMuc').html(danhMucHtml);

        // mở modal thêm
        $('#btnAddMonAn').click(function() { $('#formAddMonAn')[0].reset(); $('#modalAddMonAn').modal('show'); });

        // submit thêm
        $('#formAddMonAn').submit(function(e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: '/Admin/MonAn/Create', type: 'POST', data: formData, processData: false, contentType: false,
                success: function(res) {
                    if(res.success) {
                        toastr.success('Thêm thành công!', 'Thành công'); setTimeout(()=>location.reload(),1000);
                    } else {
                        toastr.error(res.message + (res.errors? '<br>'+res.errors.join('<br>'):''), 'Lỗi');
                    }
                }
            });
        });

        // mở modal sửa
        $(document).on('click', '.btnEditMonAn', function() {
            var btn = $(this);
            $('#editMonAnId').val(btn.data('id')); $('#editTenMonAn').val(btn.data('ten')); $('#editGia').val(btn.data('gia')); $('#editMoTa').val(btn.data('mota')); $('#editDanhMuc').val(btn.data('danhmucid'));
            var imgs = btn.data('images'), html=''; if(imgs) imgs.forEach(i=> html+=`<div class="position-relative me-2 mb-2"><img src="/uploads/monan/${i.url}" width="80" height="80" style="object-fit:cover;"/><input type="checkbox" name="imagesToDelete" value="${i.id}" style="position:absolute;top:5px;right:5px;"/></div>`);
            $('#editAnhHienTai').html(html); $('#modalEditMonAn').modal('show');
        });

        // submit sửa
        $('#formEditMonAn').submit(function(e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: '/Admin/MonAn/Edit', type: 'POST', data: formData, processData: false, contentType: false,
                success: function(res) {
                    if(res.success) {
                        toastr.success('Cập nhật thành công!', 'Thành công'); setTimeout(()=>location.reload(),1000);
                    } else {
                        toastr.error(res.message + (res.errors? '<br>'+res.errors.join('<br>'):''), 'Lỗi');
                    }
                }
            });
        });

        // xoá giữ alert
        function deleteMonAn(id, attempts) {
            attempts = attempts||0; $.post('/Admin/MonAn/Delete',{id:id},function(res){
                if(res.success){ alert('Xóa thành công!'); location.reload(); }
                else if(attempts<5) deleteMonAn(id,attempts+1);
                else alert('Có lỗi xảy ra khi xóa món ăn!');
            });
        }
        $(document).on('click','.btnDeleteMonAn', function(){ if(!confirm('Bạn có chắc chắn muốn xóa món ăn này?')) return; deleteMonAn($(this).data('id')); });
    });
</script>
