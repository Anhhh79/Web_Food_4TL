<div class="main" id="content">
    <nav class="navbar navbar-expand px-4 py-3">
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav justify-content-between" style="width: 1380px;">
                <li>
                    <h2 style="font-weight: bolder;">Thống kê</h2>
                </li>
                <li class="ms-3 dropdown">
                    <button class="btn btn-secondary text-light dropdown-toggle d-none d-lg-block" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-user-circle"></i> @Context.Session.GetString("UserName")
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item text-danger" href="/Customer/Account/Logout">Đăng xuất</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <main class="content px-3 py-3">
        <div class="row g-3 pb-4">
            <!-- Tổng Doanh thu -->
            <div class="col-sm-4 wow fadeIn">
                <div class="border rounded p-1">
                    <div class="border rounded text-center p-4">
                        <i class="fa-solid fa-money-bill fa-2x text-color mb-2"></i>

                        <h2 class="mb-1" id="TongDanhthu" data-toggle="counter-up"></h2>
                        <p class="mb-0">Tổng doanh thu</p>
                    </div>
                </div>
            </div>
            <!-- Món ăn -->
            <div class="col-sm-4 wow fadeIn">
                <div class="border rounded p-1">
                    <div class="border rounded text-center p-4">
                        <i class="fa-solid fa-utensils fa-2x text-color mb-2"></i>

                        <h2 class="mb-1" id="MonAn" data-toggle="counter-up"></h2>
                        <p class="mb-0">Món Ăn</p>
                    </div>
                </div>
            </div>
            <!-- Người dùng -->
            <div class="col-sm-4 wow fadeIn">
                <div class="border rounded p-1">
                    <div class="border rounded text-center p-4">
                        <i class="fa fa-users fa-2x text-color mb-2"></i>

                        <h2 class="mb-1" id="NguoiDung" data-toggle="counter-up"></h2>
                        <p class="mb-0">Người Dùng</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="chart-container" style="margin-left:30px;">
            <canvas id="combinedChart"></canvas>
        </div>
    </main>
</div>