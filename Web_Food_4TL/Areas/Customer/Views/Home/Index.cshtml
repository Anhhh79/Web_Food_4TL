<div class="modal fade" id="monAnDetailModal" tabindex="-1" aria-labelledby="monAnDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <!-- Thêm modal-lg để mở rộng kích thước -->
        <div class="modal-content" id="modalContent">
            <!-- Nội dung sẽ được load bằng AJAX -->
        </div>
    </div>
</div>

<script>
    const searchInput = document.getElementById('searchMenu');
    const suggestionsList = document.getElementById('suggestions');

    searchInput.addEventListener('input', function () {
        const keyword = this.value.toLowerCase().trim();
        const dishes = document.querySelectorAll('.menu-item');
        let foundTab = null;
        let suggestions = [];

        // Nếu ô tìm kiếm rỗng thì hiển thị lại tất cả món ăn
        if (keyword === '') {
            clearSearch();
            return;
        }

        // Ẩn/hiện món và thu thập gợi ý
        dishes.forEach(dish => {
            const nameElem = dish.querySelector('.dish-name');
            const name = nameElem ? nameElem.textContent.toLowerCase() : '';

            if (name.includes(keyword)) {
                dish.style.display = '';
                suggestions.push(nameElem.textContent.trim());

                if (!foundTab) {
                    const tabPane = dish.closest('.tab-pane');
                    if (tabPane) foundTab = tabPane.id;
                }
            } else {
                dish.style.display = 'none';
            }
        });

        // Gợi ý món
        renderSuggestions(suggestions);

        // Chuyển tab nếu tìm thấy
        if (foundTab) {
            const tabTrigger = document.querySelector(`[data-bs-toggle="tab"][href="#${foundTab}"]`);
            if (tabTrigger && !tabTrigger.classList.contains('active')) {
                const tab = new bootstrap.Tab(tabTrigger);
                tab.show();
            }
        }
    });

    // Hàm render gợi ý
    function renderSuggestions(suggestions) {
        suggestionsList.innerHTML = '';
        if (suggestions.length === 0) {
            suggestionsList.style.display = 'none';
            return;
        }

        suggestions.forEach(item => {
            const li = document.createElement('li');
            li.textContent = item;
            li.className = 'list-group-item list-group-item-action';
            li.addEventListener('click', function () {
                searchInput.value = item;
                suggestionsList.style.display = 'none';
                searchInput.dispatchEvent(new Event('input'));
            });
            suggestionsList.appendChild(li);
        });

        suggestionsList.style.display = 'block';
    }

    // Hàm xóa tìm kiếm và hiện tất cả món ăn
    function clearSearch() {
        const dishes = document.querySelectorAll('.menu-item');
        dishes.forEach(dish => {
            dish.style.display = '';
        });
        suggestionsList.style.display = 'none';
        suggestionsList.innerHTML = '';
    }

    // Enter để cuộn xuống menu
    searchInput.addEventListener('keydown', function (e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            const menu = document.getElementById('menu');
            if (menu) {
                menu.scrollIntoView({ behavior: 'smooth' });
            }
            this.dispatchEvent(new Event('input'));
        }
    });

    // Click ngoài sẽ ẩn gợi ý
    document.addEventListener('click', function (e) {
        if (!searchInput.contains(e.target) && !suggestionsList.contains(e.target)) {
            suggestionsList.style.display = 'none';
        }
    });
</script>

