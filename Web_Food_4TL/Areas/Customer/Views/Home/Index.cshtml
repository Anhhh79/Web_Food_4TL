<!-- JavaScript tăng/giảm số lượng -->
<script>
    function increaseQty(button) {
        let input = button.parentElement.querySelector("input");
        input.value = parseInt(input.value) + 1;
    }

    function decreaseQty(button) {
        let input = button.parentElement.querySelector("input");
        if (parseInt(input.value) > 1) {
            input.value = parseInt(input.value) - 1;
        }
    }
</script>
@* event *@
<section id="events" class="events section">
    <div class="container-fluid py-5">
        <div id="serviceContainer" class="d-flex flex-nowrap justify-content-center gap-3" style="height: 500px; overflow: hidden;">
        </div>
        <div id="dotsContainer" class="d-flex justify-content-center mt-3">
        </div>
    </div>
    <script>
        const services = [
          { title: "Birthday Parties", price: "$499", description: "Laborum aperiam atque omnis minus omnis est qui assumenda quos.", image: "/img/events-1.jpg" },
          { title: "Wedding Parties", price: "$899", description: "Esse quisquam ducimus officia ipsum ut quibusdam maxime.", image: "/img/events-2.jpg" },
          { title: "Custom Parties", price: "$99", description: "Enim facilis veritatis id est rem repudiandae nulla expedita quas.", image: "/img/events-3.jpg" },
          { title: "Private Parties", price: "$289", description: "In delectus sint qui et enim. Et ab repudiandae inventore quaerat.", image: "/img/events-4.jpg" }
        ];
        let startIndex = 0;
        let isTransitioning = false;

        function renderServices(direction = "right") {
          const container = document.getElementById("serviceContainer");
          const dotsContainer = document.getElementById("dotsContainer");
          const currentCards = container.querySelectorAll(".service-card");
          currentCards.forEach(card => {
            card.classList.add(direction === "right" ? "hidden-left" : "hidden-right");
            card.classList.remove("visible");
          });
          isTransitioning = true;
          setTimeout(() => {
            container.innerHTML = "";
            dotsContainer.innerHTML = "";
            for (let i = 0; i < 3; i++) {
              let index = (startIndex + i) % services.length;
              const service = services[index];
              const card = document.createElement("div");
              card.classList.add("card", "text-white", "bg-dark", "shadow", "service-card", "hidden-right");
              card.style.backgroundImage = `url('${service.image}')`;
              card.style.backgroundSize = "cover";
              card.style.backgroundPosition = "center";
              card.style.height = "500px";
              card.style.borderRadius = "15px";

              card.innerHTML = `
                <div class="card-img-overlay d-flex flex-column justify-content-end" style="background: rgba(0, 0, 0, 0.6); padding: 20px;">
                  <h4 class="card-title">${service.title}</h4>
                  <h2 class="card-text" style="text-decoration: underline; text-decoration-color: red; text-underline-offset: 5px;">${service.price}</h2>
                  <p class="card-text">${service.description}</p>
                </div>
              `;
              container.appendChild(card);
              // Kích hoạt hiệu ứng chuyển động
              setTimeout(() => {
                card.classList.add("visible");
                card.classList.remove("hidden-left", "hidden-right");
              }, 50);
            }

            // Tạo các dot điều hướng, sử dụng rounded-circle và margin của Bootstrap
            for (let i = 0; i < services.length; i++) {
              let dot = document.createElement("div");
              dot.classList.add("rounded-circle", "m-1");
              dot.style.width = "15px";
              dot.style.height = "15px";
              dot.style.backgroundColor = (i === startIndex) ? "blue" : "gray";
              dot.style.cursor = "pointer";
              dot.onclick = () => goToService(i);
              dotsContainer.appendChild(dot);
            }
            isTransitioning = false;
          }, 100);
        }

        function nextServices() {
          if (isTransitioning) return;
          startIndex = (startIndex + 1) % services.length;
          renderServices("right");
        }

        function goToService(index) {
          if (isTransitioning) return;
          const direction = index > startIndex ? "right" : "left";
          startIndex = index;
          renderServices(direction);
        }

        renderServices();
        setInterval(nextServices, 10000);

        // Hỗ trợ kéo và vuốt
        let startX, isDragging = false;

        function onMouseDown(e) {
          startX = e.clientX || e.touches[0].clientX;
          isDragging = true;
        }

        function onMouseMove(e) {
          if (!isDragging) return;
          const currentX = e.clientX || e.touches[0].clientX;
          const deltaX = currentX - startX;

          if (Math.abs(deltaX) > 100) {
            if (deltaX > 0) {
              startIndex = (startIndex - 1 + services.length) % services.length;
              renderServices("left");
            } else {
              startIndex = (startIndex + 1) % services.length;
              renderServices("right");
            }
            isDragging = false;
          }
        }

        function onMouseUp() {
          isDragging = false;
        }

        const container = document.getElementById("serviceContainer");
        container.addEventListener("mousedown", onMouseDown);
        container.addEventListener("mousemove", onMouseMove);
        container.addEventListener("mouseup", onMouseUp);
        container.addEventListener("mouseleave", onMouseUp);
        container.addEventListener("touchstart", onMouseDown);
        container.addEventListener("touchmove", onMouseMove);
        container.addEventListener("touchend", onMouseUp);
    </script>
</section>
