            <div class="row">
              
                <div class="col-12 col-md-4 mb-4 d-flex justify-content-center">
                    <div class="menu-item">
                        <img src="~/img/menu-item-1.png" alt="Starter 2">
                        <h5>Starter 2</h5>
                        <p>Lorem ipsum dolor sit.</p>
                        <p class="price">$6.50</p>
                        <!-- Số lượng + Thêm vào giỏ -->
