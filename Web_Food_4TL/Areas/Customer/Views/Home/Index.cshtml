<section id="menu" class="menu section">
<div class="container-fluid mt-5">
    <div class="text-center py-4">
        <!-- Thêm padding trên dưới -->
        <h2 class="mt-3 fs-6">MENU</h2> <!-- Thêm margin trên -->
        <p class="mb-3">
            <!-- Thêm margin dưới -->
            <span class="fs-2 me-2">Xem</span>
            <span class="menu-subtitle">4TL Menu</span>
        </p>
    </div>



    <!-- Tabs -->
    <ul class="nav nav-tabs justify-content-center my-3">
        <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#starters">Món khai vị</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#breakfast">Món ăn sáng</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#lunch">Món ăn trưa</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#dinner">Món ăn tối</a></li>
    </ul>


<!-- Nội dung danh mục -->
<div class="tab-content">
    <!-- Starters -->
    <div class="tab-pane fade show active" id="starters">
        <h3 class="menu-subtitle py-4">Starters</h3>
        <div class="row">
            @foreach (var monAn in Model.Where(m => m.TenDanhMuc == "Starters"))
            {
                <div class="col-12 col-md-4 mb-4 d-flex justify-content-center">
                    <div class="menu-item">
                        @if (monAn.AnhMonAn != null && monAn.AnhMonAn.Any()) {
                            <img src="/uploads/monan/@monAn.AnhMonAn.FirstOrDefault()" class="card-img-top rounded" style="width: 250px; height: 280px; object-fit: contain;" />
                        } else {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }
                        <h5>@monAn.TenMonAn</h5>
                        <p>@monAn.MoTa</p>
                        <p class="price">@string.Format("{0:N0} đ", monAn.Gia)</p>
                        <button class="btn btn-primary view-detail" data-id="@monAn.Id">Xem Chi Tiết</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Breakfast -->
    <div class="tab-pane fade" id="breakfast">
        <h3 class="menu-subtitle py-4">Breakfast</h3>
        <div class="row">
            @foreach (var monAn in Model.Where(m => m.TenDanhMuc == "Breakfast"))
            {
                <div class="col-12 col-md-4 mb-4 d-flex justify-content-center">
                    <div class="menu-item">
                        @if (monAn.AnhMonAn != null && monAn.AnhMonAn.Any()) {
                            <img src="/uploads/monan/@monAn.AnhMonAn.FirstOrDefault()" class="card-img-top rounded" style="width: 250px; height: 280px; object-fit: contain;"/>
                        } else {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }
                        <h5>@monAn.TenMonAn</h5>
                        <p>@monAn.MoTa</p>
                        <p class="price">@string.Format("{0:N0} đ", monAn.Gia)</p>
                        <button class="btn btn-primary view-detail" data-id="@monAn.Id">Xem Chi Tiết</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Lunch -->
    <div class="tab-pane fade" id="lunch">
        <h3 class="menu-subtitle py-4">Lunch</h3>
        <div class="row">
            @foreach (var monAn in Model.Where(m => m.TenDanhMuc == "Lunch"))
            {
                <div class="col-12 col-md-4 mb-4 d-flex justify-content-center">
                    <div class="menu-item">
                        @if (monAn.AnhMonAn != null && monAn.AnhMonAn.Any()) {
                            <img src="/uploads/monan/@monAn.AnhMonAn.FirstOrDefault()" class="card-img-top rounded" style="width: 250px; height: 280px; object-fit: contain;"/>
                        } else {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }
                        <h5>@monAn.TenMonAn</h5>
                        <p>@monAn.MoTa</p>
                        <p class="price">@string.Format("{0:N0} đ", monAn.Gia)</p>
                        <button class="btn btn-primary view-detail" data-id="@monAn.Id">Xem Chi Tiết</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Dinner -->
    <div class="tab-pane fade" id="dinner">
        <h3 class="menu-subtitle py-4">Dinner</h3>
        <div class="row">
            @foreach (var monAn in Model.Where(m => m.TenDanhMuc == "Dinner"))
            {
                <div class="col-12 col-md-4 mb-4 d-flex justify-content-center">
                    <div class="menu-item">
                        @if (monAn.AnhMonAn != null && monAn.AnhMonAn.Any()) {
                            <img src="/uploads/monan/@monAn.AnhMonAn.FirstOrDefault()" class="card-img-top rounded" style="width: 250px; height: 280px; object-fit: contain;"/>
                        } else {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }
                        <h5>@monAn.TenMonAn</h5>
                        <p>@monAn.MoTa</p>
                        <p class="price">@string.Format("{0:N0} đ", monAn.Gia)</p>
                        <button class="btn btn-primary view-detail" data-id="@monAn.Id">Xem Chi Tiết</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


</div>
</section>


