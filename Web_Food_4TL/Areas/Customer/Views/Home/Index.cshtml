        <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#starters">Starters</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#breakfast">Breakfast</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#lunch">Lunch</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#dinner">Dinner</a></li>
    </ul>

    <!-- Nội dung của từng danh mục -->
