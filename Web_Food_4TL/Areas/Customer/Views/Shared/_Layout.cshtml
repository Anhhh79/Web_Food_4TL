    <!-- Modal danh gia -->
    <div class="modal fade" id="modalDanhGia" tabindex="-1" aria-labelledby="modalDanhGia" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3 pb-0">
                <!-- Nội dung của modal -->
                <!-- modal headder -->
                <div class="modal-header d-flex justify-content-center">
                    <div>
                        <h5>Đánh giá món <span class="text-warning" id="TenMonAn"></span></h5>
                        <input type="hidden" name="IdMonAnDG" id="ModalMonAnId" value="" />
                    </div>
                    <button type="button" class="btn-close" onclick="clearDataAssessInput(), clearStarAssess(), resetError()"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <!-- modal body -->
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="PhoneNumberAssess" class="form-label">Số Điện Thoại</label>
                        <input type="tel" class="form-control Assess" id="PhoneNumberAssess"
                               aria-describedby="phoneNumber" placeholder="Nhập số điện thoại đã đặt món ăn"
                               pattern="[0-9]{10}" title="Số điện thoại gồm 10 chữ số" required>
                        <div id="phoneNumberError" class="text-danger" style="font-size: 0.875rem;"></div>
                    </div>
                    <div class="mb-3">
                        <label for="ContentAssess" class="form-label">Nội Dung Đánh Giá</label>
                        <textarea class="form-control Assess" id="ContentAssess" rows="3"
                                  placeholder="Nội dung đánh giá của bạn về sân bóng"></textarea>
                    </div>
                    <label for="" class="form-label">Đánh món ăn</label>
                    <div class="star-rating mb-3">
                        <input type="radio" class="star" id="star5" name="rating" value="5" required />
                        <label for="star5" title="5 stars"><i class="fas fa-star"></i></label>
                        <input type="radio" class="star" id="star4" name="rating" value="4" />
                        <label for="star4" title="4 stars"><i class="fas fa-star"></i></label>
                        <input type="radio" class="star" id="star3" name="rating" value="3" />
                        <label for="star3" title="3 stars"><i class="fas fa-star"></i></label>
                        <input type="radio" class="star" id="star2" name="rating" value="2" />
                        <label for="star2" title="2 stars"><i class="fas fa-star"></i></label>
                        <input type="radio" class="star" id="star1" name="rating" value="1" />
                        <label for="star1" title="1 star"><i class="fas fa-star"></i></label>
                    </div>
                    <div id="starRatingError" class="text-danger" style="font-size: 0.875rem;"></div>
                </div>
                <!-- modal footer -->
                <div class="modal-footer">
                    <a class="btn btn-warning text-light" onclick="submitAssessmentForm()">Gửi Đánh Giá</a>
                </div>
            </div>
        </div>
    </div>
